<Window x:Class="WPF.GestionConsultores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Gestión de Consultores" Height="400" Width="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Consultores}" 
                  SelectedItem="{Binding ConsultorSeleccionado}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Usuario" Binding="{Binding NombreUsuario}"/>
                <DataGridTextColumn Header="Contraseña" Binding="{Binding Contrasena}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Crear" Command="{Binding CrearCommand}" Margin="5"/>
            <Button Content="Actualizar" Command="{Binding ActualizarCommand}" Margin="5"/>
            <Button Content="Eliminar" Command="{Binding EliminarCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
