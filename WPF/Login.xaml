<Window x:Class="Proyecto_Ing_software.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Ing_software"
        mc:Ignorable="d"
        Title="Login" Height="220" Width="350"

        WindowStartupLocation="CenterScreen"
        >


    <Grid Height="198" VerticalAlignment="Top">

        <Label Content="Usuario" HorizontalAlignment="Center" Margin="0,8,0,0" VerticalAlignment="Top" Height="26" Width="306"/>
        <TextBox x:Name="CajaUsuario" HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="306" Height="24"/>
        <Label Content="Contraseña" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" Height="26" Width="306"/>
        <Button Content="Ingresar" HorizontalAlignment="Left" Margin="244,140,0,0" VerticalAlignment="Top" Height="20" Width="70" Click="Button_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="22,140,0,0" VerticalAlignment="Top" Height="20" Width="70" Click="Button_Click_1"/>
        <PasswordBox x:Name="CajaContraseña" HorizontalAlignment="Center" Margin="0,96,0,0" VerticalAlignment="Top" Width="306" Height="22"/>


    </Grid>
</Window>
